generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Message {
  id            String   @id               // AT messageId
  phoneNumber   String
  text          String
  status        String   @default("Sent") // Sent â†’ Delivered / Failed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  retries       Int      @default(0)      // Retry counter
}